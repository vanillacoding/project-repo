{
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "eol-last": "error",
    "eqeqeq": ["error", "always"],
    "no-console": "error",
    "no-trailing-spaces": "error",
    "indent": ["error", 2, { "SwitchCase": 1, "ObjectExpression": 1 }],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ]
  }
}
