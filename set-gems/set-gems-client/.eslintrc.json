{
  "env": {
    "commonjs": true,
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "error",
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    "no-trailing-spaces": "error",
    "no-var": "error",
    "object-curly-spacing": ["error", "always"],
    "semi": "error",
    "comma-dangle": ["error", "always-multiline"],
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "double"]
  }
}
