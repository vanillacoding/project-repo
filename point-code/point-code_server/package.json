{
  "name": "point-code_server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/app",
    "build": "tsc",
    "dev": "set NODE_ENV=development && ts-node-dev --respawn src/app",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "airbnb-typescript/base"
    ],
    "rules": {
      "no-plusplus": 0,
      "linebreak-style": 0,
      "object-curly-newline": 0,
      "array-bracket-spacing": 0,
      "implicit-arrow-linebreak": 0,
      "no-new": 0,
      "consistent-return": 0,
      "no-console": 0,
      "func-names": 0,
      "no-underscore-dangle": 0,
      "max-len": 0,
      "space-before-function-paren": 0,
      "arrow-body-style": 0,
      "no-await-in-loop": 0,
      "@typescript-eslint/space-before-function-paren": 0,
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ]
    },
    "env": {
      "node": true,
      "es2020": true,
      "jest": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "morgan": "^1.10.0",
    "vm2": "^3.9.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.4",
    "@types/hapi__joi": "^16.0.12",
    "@types/helmet": "^0.0.45",
    "@types/hpp": "^0.2.1",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.8",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.2.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
